{
  "name": "shopflow-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared",
    "main"
  ],
  "scripts": {
    "start": "node scripts.mjs",
    "watch": "concurrently \"pnpm --filter main dev\" \"pnpm --filter shopflow-cart build:preview\" \"pnpm --filter shopflow-footer build:preview\" \"pnpm --filter shopflow-header build:preview\""
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.3.6",
    "@types/node": "^22.7.2",
    "chalk": "^5.3.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "daisyui": "^4.12.10",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "inquirer": "^11.0.2",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.13",
    "vite-plugin-federation": "^0.0.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "react-redux": "^9.1.2",
    "shopflow-shared": "workspace:*"
  }
}
